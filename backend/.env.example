# Example .env for a Go backend (rename to .env for local use)
# Replace placeholder values before running in production

APP_ENV=development
APP_PORT=8080
LOG_LEVEL=info

# Database (Postgres example)
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=team_stack_dev
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Auth / JWT
JWT_SECRET=change_me_to_a_long_random_string
JWT_EXPIRE_HOURS=72

# External services
SENTRY_DSN=

# SMTP (for sending emails)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=no-reply@example.com

# App
APP_URL=http://localhost:8080
CORS_ALLOWED_ORIGINS=*